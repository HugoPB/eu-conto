@model EuConto.Models.UserModels.LoginModel

<div class="container col-8 col-sm-8 col-md-6 col-xl-5" style="margin-top: 100px;">
    <div class="card">
        <h5 class="card-header black white-text text-center py-4">
            <strong>Logar</strong>
        </h5>
        <div class="card-body px-lg-5 pt-0 my-5">
            <form asp-route="login" method="post" class="text-center">
                <div class="row justify-content-md-center justify-content-center">
                    <div class="md-form col-md-6 col-8">
                        <input asp-for="Username" type="text" class="form-control align-self-center">
                        <label asp-for="Username"></label>
                        <span asp-validation-for="Username" class="validator-page"></span>
                    </div>
                </div>

                <div class="row justify-content-md-center justify-content-center">
                    <div class="md-form col-md-6 col-8">
                        <input asp-for="Password" type="password" class="form-control">
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="validator-page"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-around my-3">
                    <div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                            <label class="custom-control-label" for="defaultLoginFormRemember">Permanecer logado</label>
                        </div>
                    </div>
                    <div>
                        <a href="">Esqueceu a senha?</a>
                    </div>
                </div>

                <div class="row justify-content-md-center justify-content-center">
                    <div class="md-form col-md-6 col-8">
                        <button class="btn btn-outline-black btn-block my-3 waves-effect" type="submit">Entrar</button>
                    </div>
                </div>

                <div class="row justify-content-md-center justify-content-center">
                    <div class="md-form col-md-6 col-8">
                        <div asp-validation-summary="ModelOnly" class="validator-page"></div>
                    </div>
                </div>

                <p>
                    Não tem conta ?
                    <a href="@Url.RouteUrl("Register")">Crie agora</a>
                </p>
            </form>
        </div>
    </div>    
</div>